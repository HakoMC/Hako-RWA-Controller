{
    "format_version": "1.13.0",
    "minecraft:entity": {
        "description": {
            "identifier": "hako:hako_st",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "animations":{
                "point_controller": "controller.animation.hako_point"
            },
            "scripts":{
                "animate":[
                    "point_controller"
                ]
            }
        },
        "components": {
            "minecraft:collision_box": {
                "width": 0,
                "height": 0
            },
            "minecraft:knockback_resistance": { "value": 1 },
            "minecraft:physics":{
                "has_collision": false,
                "has_gravity": false
            },
            "minecraft:scale": { "value": 1 },
            "minecraft:type_family": { "family": [ "hako_point" ] },
            "minecraft:damage_sensor": {
                "triggers": {
                    "on_damage": {
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "player"
                        }
                    },
                    "deals_damage": false
                }
            }
        },
        "component_groups": {
            "default": {
                "minecraft:variant": { "value": 0 }
            },
            "invisible": {
                "minecraft:variant": { "value": 1 }
            }
        },
        "events": {
            "default": {
                "remove": {
                    "component_groups": [ "invisible" ]
                },
                "add": {
                    "component_groups": [ "default" ]
                }
            },
            "invisible": {
                "remove": {
                    "component_groups": [ "default" ]
                },
                "add": {
                    "component_groups": [ "invisible" ]
                }
            }
        }
    }
}